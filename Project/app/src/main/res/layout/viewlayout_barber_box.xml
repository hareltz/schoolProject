<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/curve_hazy_white"
    android:clickable="true"
    android:onClick="openBarberProfile">

    <!-- Image that stay round -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/barbers_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:srcCompat="@drawable/user_1" />

    <TextView
        android:id="@+id/barber_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="harel tzanani"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/barbers_pic"
        app:layout_constraintStart_toStartOf="@+id/barbers_pic"
        app:layout_constraintTop_toBottomOf="@+id/barbers_pic" />

    <TextView
        android:id="@+id/barbers_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="050-7870003"
        android:textColor="#CCFFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/barber_name"
        app:layout_constraintStart_toStartOf="@+id/barber_name"
        app:layout_constraintTop_toBottomOf="@+id/barber_name" />
</androidx.constraintlayout.widget.ConstraintLayout>