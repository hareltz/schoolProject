<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="135dp"
    android:background="@drawable/appointment_screen_choose">

    <!-- Image that stay round -->

    <TextView
        android:id="@+id/appointment_choose_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:30"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appointment_choose_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/04/2024"
        android:textColor="#CCFFFFFF"
        android:textSize="14sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/appointment_choose_time"
        app:layout_constraintStart_toStartOf="@+id/appointment_choose_time"
        app:layout_constraintTop_toBottomOf="@+id/appointment_choose_time"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/appointment_choose_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"

        android:layout_marginBottom="5dp"
        android:text="50$"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/appointment_choose_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.893"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>